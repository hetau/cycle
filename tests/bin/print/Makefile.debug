CC = mb-gcc
CC_FLAGS = -Wall -mxl-barrel-shift -mno-xl-soft-div -mno-xl-soft-mul -xl-mode-executable
CC_DEBUG = -g

NAME = print

SOURCE = $(NAME).c

all: $(NAME)
	
$(NAME): $(SOURCE) cw_stdio.o
	$(CC) -O2 -o $@.debug  $^ $(CC_DEBUG) $(CC_FLAGS)

cw_stdio.o: cw_stdio.c
	$(CC) -O2 -c $< $(CC_DEBUG) $(CC_FLAGS)

clean:
	rm -f *.o $(NAME)

